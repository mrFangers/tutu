<%= form_for(@route) do |f| %>
  <%= render 'common/errors', resource: @route %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :railway_stations, t('.route_stations') %><br>
    <%= f.collection_select :railway_stations,
                            RailwayStation.all, :id, :title, {},
                            { multiple: true, class: 'form-control' } %>
  </div>

  <div class="actions">
    <%= f.submit "#{ @route.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>
